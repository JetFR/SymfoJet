{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center m-5">Posts list</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-center">Id</th>
                <th scope="col" class="text-center">Image</th>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Datecreated</th>
                <th scope="col" class="text-center">Content</th>
                <th scope="col" class="text-center">Enable</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr class="mt-2 mb-2">
                <th scope="row"><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></th>
                <td>{% if post.photo %}
                        <img src="{{ asset('uploads/' ~ post.photo) }}" alt="">{% endif %}</td>
                <td>{{ post.title }}</td>
                <td>{% if post.dateCreated %}{{ post.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.enable %}Yes{% else %}No{% endif %}</td>
                <td>
                            <a class="btn btn-block btn-primary" href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
                            <a class="btn btn-block btn-info" href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-success" href="{{ path('admin_post_new') }}">Create a new post</a>
{% endblock %}
